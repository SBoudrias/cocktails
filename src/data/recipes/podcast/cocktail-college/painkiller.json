{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Painkiller",
  "ingredients": [
    {
      "name": "Orange juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 3.5,
        "unit": "oz"
      }
    },
    {
      "name": "Cream of coconut",
      "type": "syrup",
      "quantity": {
        "amount": 1.5,
        "unit": "oz"
      }
    },
    {
      "name": "Hamilton 151 Demerara rum",
      "type": "spirit",
      "quantity": {
        "amount": 1,
        "unit": "tsp"
      }
    },
    {
      "name": "Cruzan Black Strap",
      "type": "spirit",
      "quantity": {
        "amount": 0.25,
        "unit": "oz"
      }
    },
    {
      "name": "El Dorado 15 Year",
      "type": "spirit",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Smith & Cross",
      "type": "spirit",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    }
  ],
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "collins",
  "instructions": [
    "Add all ingredients to a cocktail shaker with Kold Draft ice.",
    "Shake until well chilled.",
    "Strain into a chilled Collins glass filled 70 percent with crushed ice.",
    "Garnish with lots of freshly grated nutmeg and serve with a straw."
  ],
