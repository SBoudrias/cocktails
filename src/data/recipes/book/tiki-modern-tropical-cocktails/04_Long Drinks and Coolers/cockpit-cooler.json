  "name": "Cockpit Cooler",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "footed pilsner",
  "ingredients": [
    {
      "name": "Hampden Estate Rum Fire",
      "type": "spirit",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    },
    {
      "name": "Hamilton Pimento Dram",
      "type": "liqueur",
      "quantity": {
        "amount": 1,
        "unit": "tsp"
      }
    },
    {
      "name": "Toasted Coconut Syrup",
      "type": "syrup",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
