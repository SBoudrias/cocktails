{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Jungle Bird",
  "ingredients": [
    {
      "name": "Hamilton Jamaican Pot Still Black",
      "type": "spirit",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    },
    {
      "name": "Campari",
      "type": "liqueur",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 1.5,
        "unit": "oz"
      }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    }
  ],
  "preparation": "shaken",
  "served_on": "ice cubes",
  "glassware": "collins",
  "instructions": [
    "Combine all ingredients in a shaker with cubed ice",
    "Shake and strain into a chilled Collins glass over cubed ice",
    "Garnish with 2 pineapple leaves and a scored lime wheel"
  ],
