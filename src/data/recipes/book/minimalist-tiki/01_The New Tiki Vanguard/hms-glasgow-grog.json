  "name": "HMS Glasgow Grog",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "tiki",
  "servings": 2,
  "ingredients": [
    {
      "name": "lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 1.25,
        "unit": "oz"
      }
    },
    {
      "name": "pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "passion fruit syrup",
      "type": "category",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "Rosemary honey syrup",
      "type": "syrup",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "Yellow Chartreuse",
      "type": "liqueur",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "Hampden estate Rum Fire",
      "type": "spirit",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "Whisky (Blended Scotch)",
      "type": "category",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    },
    {
      "name": "seltzer",
      "type": "soda",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    }
