{
  "$schema": "../../../../../schemas/recipe.schema.json",
  "name": "Esotico Rum Cup",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "old fashioned",
  "ingredients": [
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": { "amount": 2, "unit": "dash" }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": { "amount": 1, "unit": "oz" }
    },
    {
      "name": "#9 syrup",
      "type": "syrup",
      "quantity": { "amount": 1.5, "unit": "oz" }
    },
    {
      "name": "Alamea spiced rum",
      "type": "spirit",
      "quantity": { "amount": 1, "unit": "oz" }
    },
    {
      "name": "Bacardi 4",
      "type": "spirit",
      "quantity": { "amount": 1.5, "unit": "oz" }
    }
  ],
  "instructions": [
    "Build all ingredients except Angostura bitters in a shaker.",
    "Shake with crushed ice, pour into a double old-fashioned or Mai Tai glass.",
    "Fill with fresh crushed ice.",
    "Add two dashes of Angostura bitters.",
    "Garnish with a mint sprig."
  ],
  "attributions": [
    {
      "source": "Daniele Dalla Pola",
      "relation": "recipe author"
    }
  ],
  "refs": [
    {
      "type": "book",
      "title": "Minimalist Tiki",
      "page": 162
    }
  ]
}
