  "name": "Tequi La Banane",
  "ingredients": [
    {
      "name": "La Gritona reposado tequila",
      "type": "spirit",
      "quantity": {
        "amount": 1.5,
        "unit": "oz"
      }
    },
    {
      "name": "lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "orgeat",
      "type": "syrup",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Giffard Banane du Brésil",
      "type": "liqueur",
      "quantity": {
        "amount": 0.25,
        "unit": "oz"
      }
    },
    {
      "name": "Giffard crème de fruit de la passion",
      "type": "liqueur",
      "quantity": {
