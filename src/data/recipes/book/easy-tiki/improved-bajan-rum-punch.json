{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Improved Bajan Rum Punch",
  "ingredients": [
    {
      "name": "Mount Gay Black Barrel",
      "type": "spirit",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    },
    {
      "name": "ginger syrup",
      "type": "syrup",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": {
        "amount": 2,
        "unit": "dash"
      }
    },
    {
      "name": "seltzer",
      "type": "soda",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    }
  ],
  "preparation": "shaken",
  "served_on": "ice cubes",
  "glassware": "collins",
  "instructions": [
    "Combine the rum, ginger syrup, lime juice, and bitters in a cocktail shaker.",
    "Add ice and shake until chilled, about 10 seconds.",
    "Strain into a Collins or hurricane glass filled with ice and top with the soda water.",
    "Garnish with freshly grated nutmeg."
  ],
