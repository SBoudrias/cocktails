{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Carrot Colada",
  "ingredients": [
    {
      "name": "London dry gin",
      "type": "category",
      "quantity": {
        "amount": 1.5,
        "unit": "oz"
      }
    },
    {
      "name": "Amaro Montenegro",
      "type": "liqueur",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "marjoram and pink peppercorn syrup",
      "type": "syrup",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "carrot juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Cream of coconut",
      "type": "syrup",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    }
  ],
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "hurricane",
  "instructions": [
