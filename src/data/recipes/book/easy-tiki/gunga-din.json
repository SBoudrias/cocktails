{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Gunga Din",
  "ingredients": [
    {
      "name": "cardamom pods",
      "type": "spice",
      "quantity": { "amount": 3, "unit": "unit" }
    },
    {
      "name": "simple syrup",
      "type": "syrup",
      "quantity": { "amount": 0.75, "unit": "oz" }
    },
    {
      "name": "Cadenhead's Old Raj Blue Label Gin",
      "type": "spirit",
      "quantity": { "amount": 2, "unit": "oz" }
    },
    {
      "name": "pineapple juice",
      "type": "juice",
      "quantity": { "amount": 1, "unit": "oz" }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": { "amount": 0.75, "unit": "oz" }
    },
    {
      "name": "Q tonic water",
      "type": "soda",
      "quantity": { "amount": 1, "unit": "unit" }
    }
  ],
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "tiki",
  "instructions": [
    "Combine the cardamom pods and simple syrup in a cocktail shaker and muddle until fragrant.",
    "Add the gin, pineapple juice, and lime juice.",
    "Add ice and shake until chilled, about 10 seconds.",
    "Fine strain into a tiki mug filled with ice.",
    "Top with tonic water and stir gently to combine.",
    "Garnish with pineapple fronds."
  ],
  "attributions": [
    { "source": "St. John Frizell", "relation": "recipe author" },
    { "source": "Fort Defiance, Brooklyn", "relation": "bar" }
  ],
  "refs": [{ "type": "book", "title": "Easy Tiki", "page": 121 }]
}
