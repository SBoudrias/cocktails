{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Samurai's Downfall",
  "ingredients": [
    {
      "name": "Mizu Saga Barley shochu",
      "type": "spirit",
      "quantity": {
        "amount": 1.5,
        "unit": "oz"
      }
    },
    {
      "name": "Giffard crème de pêche de vigne",
      "type": "liqueur",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "honey",
      "type": "other",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "green shiso leaves",
      "type": "other",
      "quantity": {
        "amount": 5,
        "unit": "unit"
      }
    }
  ],
  "preparation": "blended",
  "served_on": "crushed ice",
  "glassware": "hurricane",
  "instructions": [
    "Combine all the ingredients in a blender.",
    "Add 3/4 cup crushed ice and blend on low for 3 seconds.",
    "Increase the speed to high and blend for about 8 seconds, until the cocktail appears bright green.",
    "Pour into a hurricane glass.",
    "Garnish with a pineapple wedge and a cocktail umbrella."
  ],
