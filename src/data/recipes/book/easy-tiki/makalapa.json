{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Makalapa",
  "ingredients": [
    {
      "name": "Blended Aged Rum (Demerara)",
      "type": "category",
      "quantity": { "amount": 2, "unit": "oz" }
    },
    {
      "name": "hibiscus honey syrup",
      "type": "syrup",
      "quantity": { "amount": 1, "unit": "oz" }
    },
    {
      "name": "lime juice",
      "type": "juice",
      "quantity": { "amount": 0.5, "unit": "oz" }
    },
    {
      "name": "grapefruit juice",
      "type": "juice",
      "quantity": { "amount": 0.5, "unit": "oz" }
    },
    {
      "name": "seltzer",
      "type": "soda",
      "quantity": { "amount": 0.5, "unit": "oz" }
    }
  ],
  "preparation": "shaken",
  "served_on": "up",
  "glassware": "coupe",
  "instructions": [
    "Combine the rum, lime juice, grapefruit juice, and hibiscus honey syrup in a cocktail shaker.",
    "Add ice and shake until chilled, about 10 seconds.",
    "Strain into a coupe.",
    "Top with the soda water."
  ],
