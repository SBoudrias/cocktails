  "name": "Austral Summer",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "collins",
  "ingredients": [
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": {
        "amount": 1,
