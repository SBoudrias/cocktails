{
  "$schema": "../../../../../schemas/recipe.schema.json",
  "name": "Iron Ranger",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "hurricane",
  "ingredients": [
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": {
        "amount": 2,
        "unit": "dash"
      }
    },
    {
      "name": "Simple syrup",
      "type": "syrup",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "John D. Taylor's Velvet Falernum",
      "type": "liqueur",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Whiskey (Bourbon)",
      "type": "category",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    }
  ],
  "instructions": [
    "Combine all the ingredients in a cocktail shaker.",
    "Add 1 large ice cube and shake until it melts.",
    "Pour into a hurricane glass and top with crushed ice.",
    "Garnish with freshly grated cinnamon, a cinnamon stick, and a mint sprig."
