{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Austral Summer",
  "ingredients": [
    {
      "name": "Monteru brandy",
      "type": "spirit",
      "quantity": { "amount": 1.5, "unit": "oz" }
    },
    {
      "name": "Redbreast 12 year Irish whiskey",
      "type": "spirit",
      "quantity": { "amount": 0.5, "unit": "oz" }
    },
    {
      "name": "Kalani coconut liqueur",
      "type": "liqueur",
      "quantity": { "amount": 0.5, "unit": "oz" }
    },
    {
      "name": "Green Chartreuse",
      "type": "liqueur",
      "quantity": { "amount": 0.5, "unit": "oz" }
    },
    {
      "name": "lemon juice",
      "type": "juice",
      "quantity": { "amount": 0.75, "unit": "oz" }
    },
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": { "amount": 1, "unit": "dash" }
    }
  ],
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "collins",
  "instructions": [
    "Combine all the ingredients in a cocktail shaker with a few pellets of crushed or cracked ice and shake until they melt.",
    "Pour into a Collins glass and fill the glass with crushed ice.",
    "Garnish with a banana leaf."
  ],
  "attributions": [
    {
      "source": "Eryn Reece",
      "relation": "recipe author"
    },
    {
      "source": "Banzarbar, New York",
      "relation": "bar"
    }
  ],
  "refs": [
    {
      "type": "book",
      "title": "Easy Tiki",
      "page": 148
    }
  ]
}
