{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./ingredient.schema.json",
  "title": "Ingredient",
  "description": "A single ingredient in a recipe",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "$schema": { "type": "string" },
        "name": { "type": "string" },
        "type": { "const": "juice" },
        "description": { "type": "string" },
        "acidity": { "type": "number" },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "refs": {
          "$ref": "./recipe.schema.json#/properties/refs"
        },
        "ingredients": {
          "$ref": "./recipe.schema.json#/properties/ingredients"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "$schema": { "type": "string" },
        "name": { "type": "string" },
        "type": {
          "enum": [
            "beer",
            "bitter",
            "emulsifier",
            "category",
            "fruit",
            "liqueur",
            "puree",
            "soda",
            "spice",
            "spirit",
            "syrup",
            "tincture",
            "wine",
            "other"
          ]
        },
        "description": { "type": "string" },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "refs": {
          "$ref": "./recipe.schema.json#/properties/refs"
        },
        "ingredients": {
          "$ref": "./recipe.schema.json#/properties/ingredients"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    }
  ]
}
