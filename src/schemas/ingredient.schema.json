{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/ingredient.schema.json",
  "title": "Ingredient",
  "description": "A single ingredient in a recipe",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "type": {
      "enum": [
        "bitter",
        "category",
        "fruit",
        "juice",
        "liqueur",
        "puree",
        "soda",
        "spice",
        "spirit",
        "sugar",
        "syrup",
        "tincture",
        "wine",
        "other"
      ]
    },
    "description": { "type": "string" },
    "categories": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["name", "type"],
  "additionalProperties": false
}
