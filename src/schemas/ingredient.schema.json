{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/ingredient.schema.json",
  "title": "Ingredient",
  "description": "A single ingredient in a recipe",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "enum": ["spirit", "juice", "syrup", "liqueur"]
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quantity": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "unit": {
          "enum": ["oz", "ml", "dash", "tsp", "tbsp", "drop"]
        }
      },
      "required": ["amount", "unit"]
    }
  },
  "required": ["name", "type", "quantity"]
}
