{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./youtube-channel.schema.json",
  "title": "Youtube Channel",
  "description": "A Youtube channel",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": {
      "description": "The name of the channel",
      "type": "string"
    },
    "link": {
      "description": "Link to the channel homepage",
      "type": "string"
    },
    "description": {
      "description": "Description of the channel content",
      "type": "string"
    }
  },
  "required": ["name", "link", "description"],
  "additionalProperties": false
}
