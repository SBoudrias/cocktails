{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/category.schema.json",
  "title": "Category",
  "description": "A liqueur or spirit category",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "refs": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": { "const": "youtube" },
              "videoId": { "type": "string" },
              "start": { "type": "number" }
            },
            "required": ["type", "videoId"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
