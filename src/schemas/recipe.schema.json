{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/recipe.schema.json",
  "title": "Recipe",
  "description": "A cocktail recipe",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "const": "syrup" },
              "brix": { "type": "number" },
              "quantity": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" },
                  "unit": {
                    "enum": [
                      "oz",
                      "ml",
                      "dash",
                      "tsp",
                      "tbsp",
                      "drop",
                      "pinch",
                      "unit",
                      "bottle"
                    ]
                  }
                },
                "required": ["amount", "unit"],
                "additionalProperties": false
              }
            },
            "required": ["name", "type", "quantity"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": {
                "$ref": "./ingredient.schema.json#/properties/type",
                "not": { "const": "syrup" }
              },
              "quantity": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" },
                  "unit": {
                    "enum": [
                      "oz",
                      "ml",
                      "dash",
                      "tsp",
                      "tbsp",
                      "drop",
                      "pinch",
                      "unit",
                      "bottle"
                    ]
                  }
                },
                "required": ["amount", "unit"],
                "additionalProperties": false
              }
            },
            "required": ["name", "type", "quantity"],
            "additionalProperties": false
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "preparation": {
      "enum": ["shaken", "stirred", "blended", "flash blended", "swizzled"]
    },
    "served_on": {
      "enum": ["big rock", "up", "crushed ice", "blended", "ice cubes"]
    },
    "glassware": {
      "enum": [
        "old fashioned",
        "collins",
        "highball",
        "snifter",
        "coupe",
        "martini",
        "nick & nora",
        "irish",
        "hurricane",
        "julep",
        "mule",
        "tiki",
        "punch",
        "flute",
        "footed pilsner",
        "goblet"
      ]
    },
    "instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "attributions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "relation": { "enum": ["book", "recipe author", "adapted by", "bar"] },
          "url": { "type": "string" }
        },
        "required": ["source", "relation"],
        "additionalProperties": false
      }
    },
    "refs": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": { "const": "youtube" },
              "videoId": { "type": "string" },
              "start": { "type": "number" }
            },
            "required": ["type", "videoId"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "book" },
              "title": { "type": "string" },
              "page": { "type": "number" }
            },
            "required": ["type", "title", "page"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["name", "ingredients", "preparation", "served_on", "glassware"],
  "additionalProperties": false
}
