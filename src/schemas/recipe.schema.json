{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/recipe.schema.json",
  "title": "Recipe",
  "description": "A cocktail recipe",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "$ref": "./ingredient.schema.json#/properties/type"
          },
          "quantity": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "number"
              },
              "unit": {
                "enum": ["oz", "ml", "dash", "tsp", "tbsp", "drop"]
              }
            },
            "required": ["amount", "unit"]
          }
        },
        "required": ["name", "type", "quantity"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "preparation": {
      "enum": ["shaken", "stirred", "blended", "flash blended", "swizzled"]
    },
    "served_on": {
      "enum": ["big rock", "up", "crushed ice", "blended", "ice cubes"]
    },
    "glassware": {
      "enum": [
        "rocks",
        "collins",
        "highball",
        "snifter",
        "coupe",
        "martini",
        "nick & nora",
        "irish",
        "hurricane",
        "julep",
        "mule",
        "tiki",
        "punch",
        "flute"
      ]
    },
    "instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "refs": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "youtube"
              },
              "videoId": {
                "type": "string"
              },
              "start": {
                "type": "number"
              }
            },
            "required": ["type", "videoId"]
          }
        ]
      }
    }
  },
  "required": ["name", "ingredients", "preparation", "served_on", "glassware"]
}
