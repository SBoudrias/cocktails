{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./book.schema.json",
  "title": "Book",
  "description": "A book in the catalog",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": {
      "description": "The title of the book",
      "type": "string"
    },
    "link": {
      "description": "Link to book website or publisher",
      "type": "string"
    },
    "description": {
      "description": "Description of the book content",
      "type": "string"
    }
  },
  "required": ["name", "link", "description"],
  "additionalProperties": false
}
