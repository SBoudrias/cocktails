{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///schemas/book.schema.json",
  "title": "Book",
  "description": "A book in the catalog",
  "type": "object",
  "properties": {
    "title": {
      "description": "The title of the book",
      "type": "string"
    },
    "link": {
      "description": "Link to book website or publisher",
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["title", "link"]
}
