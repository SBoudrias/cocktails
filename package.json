{
  "name": "cocktails-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "yarn workspace @cocktails/web dev",
    "lint": "yarn workspaces foreach -A run lint && eslint . && oxfmt . --check",
    "test": "vitest --run --coverage",
    "check-data": "node packages/data/tools/check-data.ts",
    "youtube-sync": "yarn workspace @cocktails/youtube-sync youtube-sync",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.1.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "next-router-mock": "^1.0.5",
    "oxfmt": "^0.27.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  },
  "nano-staged": {
    "*": "yarn oxfmt --no-error-on-unmatched-pattern",
    "*.m?[jt]sx?": "yarn eslint . --fix"
  },
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8",
  "volta": {
    "node": "24.13.0"
  }
}
