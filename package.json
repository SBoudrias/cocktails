{
  "name": "cocktails-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "yarn workspace @cocktails/web dev",
    "build": "yarn workspace @cocktails/web build",
    "start": "yarn workspace @cocktails/web start",
    "lint": "tsc --project apps/web/tsconfig.json --noEmit && tsc --project packages/data/tsconfig.json --noEmit && eslint . && oxfmt . --check",
    "test": "vitest --run --root apps/web && vitest --run --root packages/data",
    "check-data": "node packages/data/tools/check-data.ts",
    "youtube-sync": "yarn workspace @cocktails/youtube-sync youtube-sync",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "oxfmt": "^0.27.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "nano-staged": {
    "*": "yarn oxfmt --no-error-on-unmatched-pattern",
    "*.m?[jt]sx?": "yarn eslint . --fix"
  },
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8"
}
