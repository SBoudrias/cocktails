{
  "$schema": "../../../../../schemas/recipe.schema.json",
  "name": "Scully Court Punch",
  "preparation": "built",
  "served_on": "ice cubes",
  "glassware": "punch",
  "servings": 10,
  "ingredients": [
    {
      "name": "Pineapple juice",
      "type": "juice",
      "quantity": {
        "amount": 3.33,
        "unit": "oz"
      }
    },
    {
      "name": "Lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 6.75,
        "unit": "oz"
      }
    },
    {
      "name": "Ginger syrup",
      "type": "syrup",
      "quantity": {
        "amount": 8.5,
        "unit": "oz"
      }
    },
    {
      "name": "Peychaud's bitters",
      "type": "bitter",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Angostura bitters",
      "type": "bitter",
      "quantity": {
        "amount": 4.25,
        "unit": "oz"
      }
    },
    {
      "name": "Mellow Corn Straight Corn Whiskey",
      "type": "spirit",
      "quantity": {
        "amount": 17,
        "unit": "oz"
      }
    }
  ],
  "instructions": [
    "Combine all ingredients and stir to mix",
    "Keep at least 4 hours or up to overnight in a covered container in the refrigerator",
    "Stir before serving",
    "If utilizing a punch bowl, pour over a large block of ice to slow dilution",
    "Garnish with lime wheels"
  ],
  "refs": [
    {
      "type": "book",
      "title": "Tiki: Modern Tropical Cocktails",
      "page": 160
    }
  ]
}
