{
  "$schema": "../../../../schemas/recipe.schema.json",
  "name": "Land of the Lost",
  "preparation": "flash blended",
  "served_on": "crushed ice",
  "glassware": "hurricane",
  "ingredients": [
    {
      "name": "Bittermens Xocolatl Mole Bitters",
      "type": "bitter",
      "quantity": {
        "amount": 4,
        "unit": "dash"
      }
    },
    {
      "name": "Honey syrup",
      "type": "syrup",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Guava purée",
      "type": "puree",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Lime juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Ancho Reyes Ancho Chile Liqueur",
      "type": "liqueur",
      "quantity": {
        "amount": 0.25,
        "unit": "oz"
      }
    },
    {
      "name": "Paranubes Oaxaca Aguardiente de Caña",
      "type": "spirit",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
      }
    },
    {
      "name": "Alto del Carmen Pisco Reservado",
      "type": "spirit",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    }
  ],
  "instructions": [
    "Combine all ingredients in a shaker with ice",
    "Flash blend with a stand or wand mixer for 8 to 10 seconds",
    "Pour into a hurricane or pilsner glass over pebbled ice",
    "Garnish with an absinthe spritz and mint"
  ],
  "refs": [
    {
      "type": "book",
      "title": "Tiki: Modern Tropical Cocktails",
      "page": 87
    }
  ]
}
