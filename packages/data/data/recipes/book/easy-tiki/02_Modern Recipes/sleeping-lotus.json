{
  "$schema": "../../../../../schemas/recipe.schema.json",
  "name": "Sleeping Lotus",
  "preparation": "shaken",
  "served_on": "crushed ice",
  "glassware": "collins",
  "ingredients": [
    {
      "name": "Mint leaves",
      "type": "other",
      "quantity": {
        "amount": 10,
        "unit": "unit"
      }
    },
    {
      "name": "Orange bitters",
      "type": "category",
      "quantity": {
        "amount": 2,
        "unit": "dash"
      }
    },
    {
      "name": "Lemon juice",
      "type": "juice",
      "quantity": {
        "amount": 0.75,
        "unit": "oz"
      }
    },
    {
      "name": "Orgeat",
      "type": "category",
      "quantity": {
        "amount": 1,
        "unit": "oz"
      }
    },
    {
      "name": "London Dry Gin",
      "type": "category",
      "quantity": {
        "amount": 2,
        "unit": "oz"
      }
    }
  ],
  "instructions": [
    "Combine all the ingredients in a cocktail shaker.",
    "Add ice and shake until chilled, about 10 seconds.",
    "Strain into a Zombie or Collins glass filled with crushed ice and stir to incorporate.",
    "Top with more crushed ice. Garnish with an edible orchid and a mint sprig."
  ],
