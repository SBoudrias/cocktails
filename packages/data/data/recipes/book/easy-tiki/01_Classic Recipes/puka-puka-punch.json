  "name": "Puka-Puka Punch",
  "preparation": "blended",
  "served_on": "crushed ice",
  "glassware": "snifter",
  "ingredients": [
    {
      "name": "Honey syrup",
      "type": "syrup",
      "quantity": {
        "amount": 0.5,
        "unit": "oz"
