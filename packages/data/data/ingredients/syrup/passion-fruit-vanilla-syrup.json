{
  "$schema": "../../../schemas/ingredient.schema.json",
  "name": "Passion fruit vanilla syrup",
  "type": "syrup",
  "ingredients": [
    {
      "name": "Water",
      "type": "other",
      "quantity": {
        "amount": 2,
        "unit": "cup"
      }
    },
    {
      "name": "Passion fruit purée",
      "type": "puree",
      "quantity": {
        "amount": 2.25,
        "unit": "cup"
      }
    },
    {
      "name": "Vanilla bean",
      "type": "spice",
      "quantity": {
        "amount": 0.5,
        "unit": "unit"
      }
    },
    {
      "name": "sugar",
      "type": "other",
      "quantity": {
        "amount": 6,
        "unit": "cup"
      }
    }
  ],
  "instructions": [
