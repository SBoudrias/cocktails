{
  "$schema": "../../schemas/ingredient.schema.json",
  "name": "CANE pineapple-infused rum",
  "type": "spirit",
  "categories": ["Pineapple Rum"],
  "ingredients": [
    {
      "name": "Probitas Rum",
      "type": "spirit",
      "quantity": {
        "amount": 1,
        "unit": "bottle"
      }
    },
    {
      "name": "pineapple",
      "type": "fruit",
      "quantity": {
        "amount": 1,
        "unit": "unit"
      }
    },
    {
      "name": "Demerara sugar",
      "type": "other",
      "quantity": {
        "amount": 1,
        "unit": "cup"
      }
    },
    {
      "name": "coconut cream",
      "type": "other",
      "quantity": {
        "amount": 4,
        "unit": "tbsp"
      }
    }
  ],
  "instructions": [
    "Slice the skin from a ripe pineapple and chop fruit into cubes.",
    "Place into a large container with brown sugar and coconut cream.",
    "Cover with lightly aged/filtered rum (such as Probitas Rum).",
    "Stir until sugars dissolve.",
    "Refrigerate for 48 hours.",
    "Remove and save fruit."
  ]
}
