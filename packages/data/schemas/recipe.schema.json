{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./recipe.schema.json",
  "title": "Recipe",
  "description": "A cocktail recipe",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "preparation": {
      "enum": [
        "built",
        "shaken",
        "stirred",
        "blended",
        "flash blended",
        "swizzled",
        "other"
      ]
    },
    "served_on": {
      "enum": ["big rock", "up", "crushed ice", "blended", "ice cubes"]
    },
    "glassware": {
      "enum": [
        "old fashioned",
        "collins",
        "highball",
        "snifter",
        "coupe",
        "martini",
        "nick & nora",
        "irish",
        "hurricane",
        "julep",
        "mule",
        "tiki",
        "punch",
        "flute",
        "footed pilsner",
        "goblet",
        "wine glass"
      ]
    },
    "servings": {
      "type": "integer",
      "minimum": 1,
      "description": "Default number of servings this recipe makes"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "const": "syrup" },
              "brix": { "type": "number" },
              "technique": {
                "oneOf": [
                  { "$ref": "./technique.schema.json" },
                  {
                    "type": "array",
                    "items": { "$ref": "./technique.schema.json" }
                  }
                ]
              },
              "quantity": { "$ref": "./quantity.schema.json" }
            },
            "required": ["name", "type", "quantity"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": {
                "enum": [
                  "beer",
                  "bitter",
                  "emulsifier",
                  "category",
                  "fruit",
                  "juice",
                  "liqueur",
                  "puree",
                  "soda",
                  "spice",
                  "spirit",
                  "tincture",
                  "wine",
                  "other"
                ]
              },
              "brix": { "type": "number" },
              "technique": {
                "oneOf": [
                  { "$ref": "./technique.schema.json" },
                  {
                    "type": "array",
                    "items": { "$ref": "./technique.schema.json" }
                  }
                ]
              },
              "quantity": { "$ref": "./quantity.schema.json" }
            },
            "required": ["name", "type", "quantity"],
            "additionalProperties": false
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "attributions": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "relation": { "enum": ["recipe author", "adapted by"] },
              "source": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["source", "relation"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "relation": { "const": "bar" },
              "source": { "type": "string" },
              "location": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["source", "relation"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "relation": { "const": "book" },
              "source": { "type": "string" },
              "page": { "type": "number" },
              "url": { "type": "string" }
            },
            "required": ["source", "relation"],
            "additionalProperties": false
          }
        ]
      }
    },
    "refs": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": { "const": "youtube" },
              "videoId": { "type": "string" },
              "start": { "type": "number" }
            },
            "required": ["type", "videoId"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "book" },
              "title": { "type": "string" },
              "page": { "type": "number" }
            },
            "required": ["type", "title", "page"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "website" },
              "name": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["type", "name", "url"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "podcast" },
              "episodeTitle": { "type": "string" },
              "episodeLink": { "type": "string" }
            },
            "required": ["type", "episodeTitle"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["name", "ingredients", "preparation", "served_on", "glassware"],
  "additionalProperties": false
}
